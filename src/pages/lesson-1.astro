---
// English Learning App - Lesson 1: To Be and Articles
import LessonPage from '../components/LessonPage.astro';
import { getLessonById, generateLessonNavigation, getTotalLessons } from '../data/lessons';

// Get lesson data
const lessonData = getLessonById(1);
const navigation = generateLessonNavigation(1);
const totalLessons = getTotalLessons();

if (!lessonData) {
  throw new Error('Lesson 1 not found');
}
---

<LessonPage
  lessonNumber={1}
  totalLessons={totalLessons}
  title={lessonData.title}
  description="Master English grammar step by step with interactive lessons, clear explanations, and engaging quizzes. Start your journey to fluent English today!"
  learningPoints={lessonData.learningPoints}
  content={lessonData.content}
  quiz={lessonData.quiz}
  previousLesson={navigation.previousLesson}
  nextLesson={navigation.nextLesson}
  welcomeEmoji={lessonData.welcomeEmoji}
  pageTitle={lessonData.pageTitle}
  metaDescription={lessonData.metaDescription}
/>
