---
// P√°gina √≠ndice de todas las lecciones
import Layout from '../layouts/Layout.astro';
import { allLessons } from '../data/lessons/index';
---

<Layout title="√çndice de Lecciones - English Learning" description="Explora todas las lecciones disponibles para aprender ingl√©s paso a paso">
  <div class="w-full">
    <!-- Header del √≠ndice -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 dark:from-indigo-400 dark:via-purple-400 dark:to-pink-400 bg-clip-text text-transparent mb-4">
        üìö √çndice de Lecciones
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Explora todas las lecciones disponibles y encuentra el contenido perfecto para tu nivel de ingl√©s
      </p>
      <div class="mt-4 inline-flex items-center gap-2 px-4 py-2 rounded-full bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300">
        <span class="text-sm font-semibold">{allLessons.length} lecciones disponibles</span>
      </div>
    </div>

    <!-- Grid de lecciones -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {allLessons.map((lesson) => (
        <a
          href={`/lesson-${lesson.id}`}
          class="group relative block p-6 rounded-2xl bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-indigo-300 dark:hover:border-indigo-600 transition-all duration-300 hover:shadow-xl hover:shadow-indigo-100 dark:hover:shadow-indigo-900/20 hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
          aria-label={`Ir a la lecci√≥n ${lesson.id}: ${lesson.title}`}
        >
          <!-- Badge de n√∫mero de lecci√≥n -->
          <div class="absolute top-4 right-4 flex items-center justify-center w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 text-white font-bold text-sm shadow-lg">
            {lesson.id}
          </div>

          <!-- Emoji de la lecci√≥n -->
          <div class="mb-4 text-4xl">
            {lesson.welcomeEmoji || 'üìñ'}
          </div>

          <!-- T√≠tulo -->
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors pr-12">
            {lesson.title}
          </h2>

          <!-- Descripci√≥n -->
          <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-3 mb-4">
            {lesson.description}
          </p>

          <!-- Puntos de aprendizaje -->
          {lesson.learningPoints && lesson.learningPoints.length > 0 && (
            <div class="mb-4">
              <p class="text-xs font-semibold text-gray-500 dark:text-gray-500 mb-2 uppercase tracking-wide">
                Aprender√°s:
              </p>
              <ul class="space-y-1">
                {lesson.learningPoints.slice(0, 2).map((point) => (
                  <li class="text-xs text-gray-600 dark:text-gray-400 flex items-start gap-2">
                    <span class="text-indigo-500 dark:text-indigo-400 mt-1 flex-shrink-0">‚úì</span>
                    <span class="line-clamp-2">{point}</span>
                  </li>
                ))}
                {lesson.learningPoints.length > 2 && (
                  <li class="text-xs text-gray-500 dark:text-gray-500 italic">
                    +{lesson.learningPoints.length - 2} m√°s...
                  </li>
                )}
              </ul>
            </div>
          )}

          <!-- Footer con enlace -->
          <div class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-700">
            <span class="text-sm font-medium text-indigo-600 dark:text-indigo-400 group-hover:underline">
              Ver lecci√≥n ‚Üí
            </span>
            <span class="text-xs text-gray-500 dark:text-gray-500">
              {lesson.content?.length || 0} temas
            </span>
          </div>
        </a>
      ))}
    </div>

  </div>
</Layout>

