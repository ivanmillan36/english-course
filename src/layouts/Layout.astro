        <div class="flex justify-between items-center h-18 md:h-20">
          <div class="flex items-center space-x-3">
            <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 shadow-lg">
              <span class="text-xl">üá¨üáß</span>
            </div>
            <h1 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 dark:from-indigo-400 dark:via-purple-400 dark:to-pink-400 bg-clip-text text-transparent">
              English Learning
            </h1>
          </div>
          <div class="flex items-center space-x-3">
            <button 
              id="theme-toggle" 
              class="p-2.5 rounded-xl bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 transition-all duration-300 hover:scale-110 active:scale-95 shadow-modern focus-ring"
              aria-label="Toggle theme"
            >
              <span class="dark:hidden text-lg">üåô</span>
              <span class="hidden dark:inline text-lg">‚òÄÔ∏è</span>
            </button>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content with Modern Spacing -->
    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12 animate-fade-in">
      <slot />
    </main>

    <!-- Modern Footer -->
    <footer class="mt-20 border-t border-gray-200/50 dark:border-gray-800/50 glass backdrop-blur-modern">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
          <p class="text-center md:text-left text-gray-600 dark:text-gray-400 text-sm md:text-base">
            Learn English step by step
          </p>
          <p class="text-center md:text-right text-gray-500 dark:text-gray-500 text-xs md:text-sm">
            Creado con <span class="text-red-500">‚ù§Ô∏è</span> usando <strong class="text-indigo-600 dark:text-indigo-400">Astro</strong> y <strong class="text-cyan-600 dark:text-cyan-400">Tailwind CSS</strong>
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Enhanced theme toggle functionality - apply to entire website
      (function() {
        'use strict';
        
        function applyTheme(theme: string) {
          const html = document.documentElement;
          const body = document.body;
          
          // Remove any existing theme classes from both html and body
          html.classList.remove('dark', 'light');
          if (body) {
            body.classList.remove('dark', 'light');
          }
          
          if (theme === 'dark') {
            // Add dark class to html element - Tailwind v4 requires this on html
            html.classList.add('dark');
            html.setAttribute('data-theme', 'dark');
            // Also add to body for compatibility
            if (body) {
              body.setAttribute('data-theme', 'dark');
            }
            localStorage.setItem('theme', 'dark');
          } else {
            // Remove dark class from html
            html.classList.remove('dark');
            html.setAttribute('data-theme', 'light');
            // Also update body
            if (body) {
              body.setAttribute('data-theme', 'light');
            }
            localStorage.setItem('theme', 'light');
          }
          
          // Force multiple reflows to ensure Tailwind detects the change
          void html.offsetHeight;
          void body?.offsetHeight;
          
          // Trigger style recalculation on multiple elements to force Tailwind update
          requestAnimationFrame(function() {
            // Query selector to force style recalculation
            const testEl = document.querySelector('body');
            if (testEl) {
              void testEl.offsetHeight;
            }
            
            // Dispatch custom event for other scripts that might need to react
            try {
              const event = new CustomEvent('themechange', { 
                detail: { theme: theme },
                bubbles: true,
                cancelable: true
              });
              window.dispatchEvent(event);
              document.dispatchEvent(event);
            } catch(e) {
              console.error('Error dispatching theme event:', e);
            }
          });
        }
        
        // Initialize theme toggle when DOM is ready
        function initThemeToggle() {
          const themeToggle = document.getElementById('theme-toggle');
          const html = document.documentElement;
          
          if (!themeToggle) {
            // Retry if button not found yet
            setTimeout(initThemeToggle, 100);
            return;
          }
          
          // Get current theme from localStorage or detect system preference
          let currentTheme = localStorage.getItem('theme');
          
          if (!currentTheme && window.matchMedia) {
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            currentTheme = prefersDark ? 'dark' : 'light';
          } else if (!currentTheme) {
            currentTheme = 'light';
          }
          
          // Ensure initial theme is applied (in case script in head didn't work)
          if (currentTheme) {
            applyTheme(currentTheme);
          }
          
          // Set up theme toggle button click handler
          themeToggle.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            // Toggle theme based on current state
            const isDark = html.classList.contains('dark');
            const newTheme = isDark ? 'light' : 'dark';
            
            // Apply theme immediately
            applyTheme(newTheme);
            
            return false;
          });
          
          // Listen for system theme changes (only if user hasn't set a preference)
          if (window.matchMedia) {
            const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
            
            const handleSystemThemeChange = function(e: MediaQueryListEvent) {
              // Only auto-switch if user hasn't manually set a preference
              if (!localStorage.getItem('theme')) {
                applyTheme(e.matches ? 'dark' : 'light');
              }
            };
            
            if (mediaQuery.addEventListener) {
              mediaQuery.addEventListener('change', handleSystemThemeChange);
            } else {
              // Fallback for older browsers
              mediaQuery.addListener(handleSystemThemeChange);
            }
          }
        }
        
        // Initialize when DOM is ready
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', initThemeToggle);
        } else {
          // DOM already ready, initialize immediately
          initThemeToggle();
        }
      })();
    </script>
  </body>
</html>
